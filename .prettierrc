{
	"printWidth": 100,
	"useTabs": true,
	"tabWidth": 2,
	"trailingComma": "all",
	"semi": false,
	"singleQuote": true,
	"bracketSpacing": true,
	"arrowParens": "always",
	"endOfLine": "lf",
	"jsxSingleQuote": true,
	"importOrder": [
		"^@nestjs",
		"^@nestjs/(.*)$",
		"^@nestjs-(.*)$",
		"@/prisma/(.*)$",
		"@prisma/(.*)$",
		"^@/(.*)$",
		"^./(.*)$",
		"^../(.*)$",
		"^(.*)$"
	],
	"importOrderSeparation": true,
	"importOrderSortSpecifiers": true,
	"importOrderParserPlugins": ["typescript", "decorators-legacy"],
	"plugins": ["@trivago/prettier-plugin-sort-imports"]
}
